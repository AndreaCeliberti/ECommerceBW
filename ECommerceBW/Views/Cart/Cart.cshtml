@model List<CartViewModel>

@{
    ViewBag.Title = "Cart List";
    //var culterInfo = new CultureInfo("it-IT");

}
@if (TempData["DeleteError"] != null)
{
    <h4 style="color:red">@TempData["DeleteError"]</h4>
    <br />
}

@if (Model.Count == 0)
{
    <div>
        <h4> Non ci sono prodotti... </h4>
    </div>
}
else
{
    @foreach (var product in Model)
    {
        <div>

            <h1>@product.Name</h1>
            <h2>@product.Amount</h2>

            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Details</a>


        </div>
    }
}
