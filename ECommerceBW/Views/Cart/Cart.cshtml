@model List<CartViewModel>

@{
    ViewBag.Title = "Cart List";
}

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["DeleteError"]
    </div>
}

@if (Model.Count == 0)
{
    <div class="container text-center text-white mt-5">
        <h3>Il tuo carrello è vuoto...</h3>
        <a class="btn btn-grad mt-3" asp-controller="Product" asp-action="Index">
            Torna allo shop
        </a>
    </div>
}
else
{
    <div class="container mt-5 text-white">

        <h2 class="text-center mb-4">Il tuo carrello Meka</h2>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle text-center">
                <thead>
                    <tr>
                        <th>Immagine</th>
                        <th>Nome</th>
                        <th>Prezzo</th>
                        <th>Quantità</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>

                            <!-- IMMAGINE A SINISTRA -->
                            <td style="width: 120px;">
                                <img src="@product.Cover"
                                     class="img-fluid rounded"
                                     style="height:100px; width:100px; object-fit:cover;"
                                     alt="@product.Name" />
                            </td>

                            <td class="fw-bold">
                                @product.Name
                            </td>
                            <td class=" fw-bold">
                                @product.Price
                            </td>
                            <td class="fs-5">
                                @product.Amount
                            </td>

                            <td>
                                <a class="btn btn-outline-light btn-sm me-2"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@product.Id">
                                    Dettagli
                                </a>

                                <form asp-controller="Cart"
                                      asp-action="Delete"
                                      asp-route-id="@product.Id"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Elimina
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @{
            var totale = Model.Sum(p => p.Price * p.Amount);
        }

        <h4 class="text-end mt-3">
            Totale:
            <span class="price-badge">
                €@totale
            </span>
        </h4>
    </div>
}