<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceBW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceBW.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg meka-nav mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- BRAND -->
                <a class="nav-link d-flex align-items-center"  asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://cf.geekdo-images.com/o1U98KcaySPh3PwqzIWzGQ__imagepage/img/70OCwJOC4TXbaQ2CHcqLiF0wglk=/fit-in/900x600/filters:no_upscale():strip_icc()/pic6557504.png"
                         alt="Gormiti Logo"
                         style="width:50px; height:auto"
                         class="navbar-logo me-2" /> GORMITI MEKA</a>

                <!-- TOGGLER / HAMBURGER -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>

                <!-- NAV LINKS -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">Catalogo Prodotti</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Create">Aggiungi Prodotto</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="EditGrid">Griglia</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Cart">Carrello</a></li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div >
        <main role="main" class="pb-3 mb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted meka-footer">
        <div class="container">
            &copy; 2025 - ECommerceBW - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
