@model List<ProductViewModel>


@{
    ViewBag.Title = "Products List";
    //var culterInfo = new CultureInfo("it-IT");

}
@if (TempData["DeleteError"] != null)
{
    <h4 style="color:red">@TempData["DeleteError"]</h4>
    <br />
}

@if (Model.Count == 0)
{
    <div>
        <h4> Non ci sono prodotti... </h4>
    </div>
}
else
{
    
        <table border="1">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Prezzo</th>
                    <th>Descrizione</th>
                </tr>
            </thead>
        <tbody>
    @foreach (var product in Model)
    {

                <tr style="border:1px solid black">
                        <td>    @product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td> <img src="@product.Cover" alt="@product.Name" style="width:100px"/></td>

                    <td>
                        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-primary pAbsBtn ">edit</a>
                    </td>
                    </tr>
                
              
    }  </tbody>
            </table>

   
}