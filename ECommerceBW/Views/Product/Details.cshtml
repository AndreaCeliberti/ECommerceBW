@model DetailViewModel;

<div class="container py-5">

    <!-- SEZIONE PRINCIPALE PRODOTTO -->
    <div class="row g-4 align-items-start">

        <!-- CAROUSEL -->
        <div class="col-lg-5">
            <div id="carouselExample" class="carousel slide shadow rounded overflow-hidden"
                 data-bs-ride="carousel">

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="@Model.Prodotto.Cover"
                             class="d-block w-100"
                             style="height:450px; object-fit:contain;"
                             alt="@Model.Prodotto.Name">
                    </div>

                    <div class="carousel-item">
                        <img src="@Model.Prodotto.Image1"
                             class="d-block w-100"
                             style="height:450px; object-fit:contain;"
                             alt="@Model.Prodotto.Name">
                    </div>

                    <div class="carousel-item">
                        <img src="@Model.Prodotto.Image2"
                             class="d-block w-100"
                             style="height:450px; object-fit:contain;"
                             alt="@Model.Prodotto.Name">
                    </div>

                </div>

                <button class="carousel-control-prev" type="button"
                        data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>

                <button class="carousel-control-next" type="button"
                        data-bs-target="#carouselExample"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>

            </div>
        </div>

        <!-- INFO PRODOTTO -->
        <div class="col-lg-7 text-white">

            <h1 class="fw-bold mb-3">@Model.Prodotto.Name</h1>

            <p class="lead">
                @Model.Prodotto.Description
            </p>

            <h3 class="mb-4">
                <span class="badge bg-warning text-dark fs-5">
                    @Model.Prodotto.Price €
                </span>
            </h3>

            <div>

                <form asp-controller="Cart"
                      asp-action="AddToCart"
                      method="post"
                      class="row align-items-end g-3">

                    <input type="hidden" name="id" value="@Model.Prodotto.Id" />
                    <input type="hidden" name="productName" value="@Model.Prodotto.Name" />
                    <input type="hidden" name="productPrice" value="@Model.Prodotto.Price" />
                    <input type="hidden" name="cover" value="@Model.Prodotto.Cover" />

                    <!-- QUANTITÀ -->
                    <div class="col-auto">
                        <label class="form-label text-white">Quantità</label>

                        <div class="input-group" style="max-width: 140px;">
                            <button class="btn btn-outline-light"
                                    type="button"
                                    onclick="this.nextElementSibling.stepDown()">
                                −
                            </button>

                            <input type="number"
                                   class="form-control text-center"
                                   name="amount"
                                   min="1"
                                   value="1">

                            <button class="btn btn-outline-light"
                                    type="button"
                                    onclick="this.previousElementSibling.stepUp()">
                                +
                            </button>
                        </div>
                    </div>

                    <!-- ADD TO CART -->
                    <div class="col-md-auto">
                        <button type="submit"
                                class="btn btn-lg btn-grad px-4 m-0">
                            ⚡ Aggiungi al carrello
                        </button>
                    </div>

                </form>

            </div>

            <p class="small mt-3 text-light">
                ✅ Spedizione rapida • 🔒 Pagamento sicuro • 💥 Prodotto originale
            </p>

        </div>

    </div>


    <!-- PRODOTTI CORRELATI -->
    <div class="mt-5">

        <h4 class="text-white mb-4">
            Potrebbe piacerti anche
        </h4>

        <div class="row">

            @for (int i = 0; i < Model.ProductList.Count && i < 3; i++)
            {
                <div class="col-md-4 mb-4">

                    <div class="card h-100 shadow meka-card">

                        <img src="@Model.ProductList[i].Cover"
                             class="card-img-top"
                             style="height:220px; object-fit:cover;"
                             alt="@Model.ProductList[i].Name">

                        <div class="card-body text-center">

                            <h6 class="card-title fw-bold">
                                @Model.ProductList[i].Name
                            </h6>

                        </div>

                        <div class="card-footer bg-transparent border-0 text-center">

                            <a class="btn btn-grad"
                               asp-controller="Product"
                               asp-action="Details"
                               asp-route-id="@Model.ProductList[i].Id">
                                Scopri
                            </a>

                        </div>

                    </div>

                </div>
            }

        </div>

    </div>

</div>