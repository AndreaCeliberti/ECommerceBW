@model List<ProductViewModel>


@{
    ViewBag.Title = "Products List";
    //var culterInfo = new CultureInfo("it-IT");

}
@if (TempData["DeleteError"] != null)
{
    <h4 style="color:red">@TempData["DeleteError"]</h4>
    <br />
}

@if (Model.Count == 0)
{
    <div>
        <h4> Non ci sono prodotti... </h4>
    </div>
}else
{
    <div class="container">
    <div class="row">

    @foreach(var product in Model)
    {                  <div class="col-4 mb-2  ">
                    <div class="card h-100 meka-card">
