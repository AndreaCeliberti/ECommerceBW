                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        
                    </div>
                    <div class="card-footer" style="text-align:center">

                        <a class="btn btn-grad" asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
                </div>
